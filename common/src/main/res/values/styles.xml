<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Base Theme-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Normal application theme. -->
    <style name="AppTheme.App" parent="AppTheme.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="loading_progress_style">
        <item name="android:maxWidth">@dimen/loading_progress_width</item>
        <item name="android:maxHeight">@dimen/loading_progress_height</item>
        <item name="android:indeterminateDrawable">@drawable/anim_loading_progress</item>
        <item name="android:minWidth">@dimen/loading_progress_width</item>
        <item name="android:minHeight">@dimen/loading_progress_height</item>
    </style>

</resources>